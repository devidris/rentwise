@model AuthenticationLogin
@if (TempData["ToastMessage"] != null)
{
    <script>
        toastr.success('@Html.Raw( TempData["ToastMessage"])');
    </script>
}
<form id="loginForm" asp-route-returnUrl="/Home/Index" method="post" class="w-md-50 m-auto p-md-5 p-sm-1">
    <h2>Login to your account</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating d-flex mb-3 gap-2">
            <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" placeholder="+233242207779" />
            <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            <button type="button" class="btn btn-primary" onclick="sendOtp">Get OTP</button>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="@Model.OTP" class="form-control" aria-required="true" placeholder="*****" />
            <label asp-for="@Model.OTP" class="form-label">Enter OTP</label>
            <span asp-validation-for="@Model.OTP" class="text-danger"></span>
        </div>

    <div class="form-floating mb-3">
        <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="@Model.Email" class="form-label">Email</label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="@Model.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
        <label asp-for="@Model.Password" class="form-label">Password</label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <div class="checkbox mb-3">
        <label asp-for="@Model.RememberMe" class="form-label">
            <input class="form-check-input" asp-for="@Model.RememberMe" />
            @Html.DisplayNameFor(model => model.RememberMe)
        </label>
    </div>
    <div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
    </div>
    <div class="d-flex w-100 justify-content-between mt-3">
        <p>
            <a asp-controller="Auth" asp-action="Register">Register as a new user</a>
        </p>
        <p>
            <a id="forgot-password" asp-controller="Auth" asp-action="ForgotPassword">Forgot your password?</a>

        </p>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        async function sendOtp() { 
            const data = await $.ajax({
                method: "POST",
                url:"/auth/sendotp"
            })
        }
    </script>
}
