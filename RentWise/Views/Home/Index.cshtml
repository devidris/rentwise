<div class="home">
    <partial name="_Hero" />
    <partial name="_OurServices" />
    <section class="p-5 gray">
        <div class="button bg-secondary rounded-pill m-auto header">
            Construction Equipments
        </div>
        <p class="text-black-50 text-center justify-content-center mt-3">Rent High-quality Construction equipment available for short term and long term projects</p>
        <div class="mt-5">
            @if (ViewBag.ConstructionCount > 0)
            {
                <div class="d-flex flex-wrap justify-content-center">
                    @foreach (ProductModel construction in ViewBag.Construction)
                    {
                        <partial name="_DisplayPreview" for="@construction" />
                    }
                </div>
                <a class="button bg-secondary text-dark rounded-pill w-fit m-auto d-block mt-3 text-decoration-none" asp-action="Index" asp-controller="Category" asp-route-id="1">See More</a>
            }
            else
            {
                <h2 class="text-center">No Product in this category</h2>
            }
        </div>
    </section>
