<link rel="stylesheet" href="~/css/controller/home/_CategoryPreview.css" asp-append-version="true" />

@model DisplayPreview
<div class="category-preview col-lg-4 col-md-6 col-12 rounded p-3">
    <img src="@Model.Image" alt="" class="m-auto d-block rounded"/>
    <div class="content d-flex flex-column gap-2 mt-4">
        <h3 class="text-primary font-weight-bold m-0"><b>@Model.Name</b></h3>
        <p class="m-0">₵@Model.Price/Day</p>
        <p class="m-0"><i class="bi bi-star-fill text-primary mr-2"></i>@Model.Rating</p>
        <p class="m-0">@Model.Location</p>
        <button class="btn btn-primary w-100">More Info</button>
    </div>

</div>