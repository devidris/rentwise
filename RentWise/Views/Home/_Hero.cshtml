<link rel="stylesheet" href="~/css/controller/home/_Hero.css" asp-append-version="true" />
<header class="hero row justify-content-center align-items-center text-center text-white">
    <div class="hero_content">
        <div class="hero_content__header">
            <h1 class="display-3">Now it's <em>easier</em> than </h1>
            <h1 class="mb-5">ever to <span class="text-primary">Rent</span> a product</h1>

            <div class="search_input mb-2">
                <i class="bi bi-search text-muted"></i>
                <input type="search" value="" class="name-search" placeholder="Search" />
                <button class="btn rouded-pill btn-primary text-white" onclick="searchName()"> <i class="bi bi-search text-muted text-white"></i>Search</button>
            </div>
            <span class="text-primary">Need a car now? Check out our Quick Delivery or View Communities Near you  </span>
        </div>
            <ul class="search-lists pl-0 m-0 align-items-center mt-5">
                <li class="nav-item dropdown dropdown-category">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-funnel-fill"></i>
                        <span>Category</span>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="2">Car Rentals</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="1">Construction Equipments</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="4">Events/Equipments Rentals</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="10">Games</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="11">Hotel</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="5">Guest House</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="8">Motels</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="7">Short Stay</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="3">Office/ Personal Item</a></li>
                    </ul>
                </li>
            <li class="nav-item dropdown dropdown-city">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-houses-fill"></i>
                    <span>City</span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li>
                        <input type="text" class="form-control" id="citySearch" placeholder="Search city...">
                    </li>
                    <!-- Populate cities dynamically from ViewBag.Cities -->
                    @foreach (var city in ViewBag.Cities)
                    {
                        var cityName = char.ToUpper(city.Name[0]) + city.Name.Substring(1).ToLower();
                        <li><a class="dropdown-item city-item" href="#" onclick="updateDropdownToggle(this)" data-value="@cityName" style="display: none;">@cityName</a></li>
                    }
                </ul>
            </li>

                <li class="nav-item dropdown dropdown-price">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-tags-fill"></i>
                        <span>Price Range</span>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="0-50">₵0 - ₵50</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="50-100">₵50 - ₵100</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="100-200">₵100 - ₵200</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="200-500">₵200 - ₵500</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="500-1000">₵500 - ₵1000</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="1000+">Above ₵1000</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown dropdown-days">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-calendar3"></i>
                        <span>Days</span>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="1-3">1 - 3 days</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="4-7">4 - 7 days</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="8-14">8 - 14 days</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="15-30">15 - 30 days</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="31-60">31 - 60 days</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="61-90">61 - 90 days</a></li>
                        <li><a class="dropdown-item" href="#" onclick="updateDropdownToggle(this)" data-value="90+">More than 90 days</a></li>
                    </ul>
                </li>
            <button class="btn btn-primary advanced-searchrounded-pil" onclick="handleSearch()"><i class="bi bi-search"></i> </button>
            </ul>
    </div>
</header>
<script src="~/js/controller/home/_Hero.js"></script>