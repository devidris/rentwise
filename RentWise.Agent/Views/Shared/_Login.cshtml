@model AuthenticationLogin;
<div class="modal fade" id="login" tabindex="-1" aria-labelledby="loginLabel" aria-hidden="true">
    <form class="modal-dialog modal-dialog-centered loginForm" id="loginForm" asp-route-returnUrl="/Home/Index" method="post" asp-action="Login" asp-controller="Auth">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginLabel">Login to your account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="@Model.Email" class="form-label">Email or Phonenumber</label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="@Model.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="@Model.Password" class="form-label">Password</label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="@Model.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="@Model.RememberMe" />
                        @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <div class="d-flex w-100 gap-3">
                    <button type="button" class="btn btn-secondary w-50" data-dismiss="modal">Close</button>
                    <button id="loginSubmit" type="submit" class="btn btn-lg btn-primary w-50">Log in</button>

                </div>
                <div class="d-flex w-100 justify-content-between">
                    <p>
                        <a asp-controller="Auth" asp-action="Register">Register as a new user</a>
                    </p>
                    <p>
                        <a id="forgot-password" asp-area="Identity" asp-page="/Account/ForgotPassword">Forgot your password?</a>

                    </p>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


