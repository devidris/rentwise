                    'rgba(75, 0, 130, 1)'
                ],
                borderColor: [
                    'rgba(0, 128, 128, 1)',
                    'rgba(75, 0, 130, 1)'
                ],
                borderWidth: 1,
                barThickness: 20 // Set the width of each bar
            }]
        };

        var options = {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        };

        var myChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: options
        });
    });
</script>

