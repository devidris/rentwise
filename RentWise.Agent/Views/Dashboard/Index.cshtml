            <input value="@ViewBag.totalAmount" class="earnings" hidden />
            <partial name="_Dashboard" model="ViewBag.Orders" />
            <partial name="_Chat" />
            <partial name="_Reports" model="ViewBag.Orders" />
            <partial name="_Orders" model="ViewBag.Orders" />
            <partial name="_Reviews" model="ViewBag.Reviews" />
            <partial name="_Profile" model="ViewBag.Agent" />
            <partial name="_Withdrawal" model="ViewBag.Withdrawals" />


        </div>
    </div>
</div>

<style>
    .sidebar li {
        cursor: pointer;
        padding: .6rem 0;
    }

        .sidebar li:not(.split-li):hover, .sidebar-item:hover {
            background: var(--bs-primary)
        }

    .sidebar-item {
        padding: .6rem 3rem;
    }

    .display-none {
        display: none
    }

    .search_input {
        display: grid;
        grid-template-columns: min-content 1fr min-content;
        margin: auto;
        align-items: center;
    }

        .search_input i {
            grid-column: 1/1;
            grid-row: 1/1;
            z-index: 2;
            justify-self: center;
            padding: .5rem 1.5rem;
        }

        .search_input input {
            grid-column: 1/-1;
            grid-row: 1/1;
            z-index: 1;
            padding: .5rem 4rem;
            border-radius: 2rem;
            border: none;
        }

    .active {
        background: var(--bs-primary);
    }

</style>
