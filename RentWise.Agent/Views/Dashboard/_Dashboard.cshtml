@model List<OrdersModel>
@{
    IEnumerable <OrdersModel> filteredOrders = Model.Where(order => order.LkpStatus == 4);
    IEnumerable<OrdersModel> pendingOrders = Model.Where(order => order.LkpStatus == 1 || order.LkpStatus == 2);
    double totalAmount = filteredOrders.Any() ? filteredOrders.Sum(order => order.TotalAmount) : 0;
    double averageTotalAmount = filteredOrders.Any() ? filteredOrders.Average(order => order.TotalAmount) : 0;
    double totalPendingAmount = pendingOrders.Any() ? pendingOrders.Sum(order => order.TotalAmount) : 0;

    IEnumerable<ReviewModel> reviews = ViewBag.Reviews;
    int totalReview = reviews.Any() ? reviews.Count(): 0;
    double avergeRating = reviews.Any() ? reviews.Average(review => review.RatingValue): 0;

    IEnumerable<LikeModel> likes = ViewBag.Likes;
    int totalLikes = likes.Count();

}
<div class="content content-1">
    <div class="bg-primary bg-opacity-25 p-3">
        <p class="m-0  text">Congratulations!!!  Your account is Active</p>
    </div>
    <div class="mt-5 border border-1 p-3">
        <div class="progress">
            <div class="progress-bar bg-tertiary" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="bg-tertiary-subtle bg-opacity-25 p-3 mt-3">
            <p class="m-0  text">Account Setup Progress</p>
        </div>
    </div>
    <input value="@Model.Count" class="order-count" hidden />
    <input value="@totalAmount" class="earnings" hidden />
    <div class="row">
        <div class="col-6">
            <ul class="list-unstyled border border-1 text-center">
                <li>
                    <p><b>Total Orders Pending</b></p>
                    <p><b>₵@totalPendingAmount</b></p>
                    <hr />
                </li>
                <li>
                    <p><b>Earning</b></p>
                    <p><b>₵@totalAmount</b></p>
                    <hr />
                </li>
                <li>
                    <p><b>Average Earning</b></p>
                    <p><b>₵@averageTotalAmount</b></p>
                    <hr />
                </li>
                <li>
                    <p><b>Orders</b></p>
                    <p><b>@Model.Count</b></p>
                </li>
            </ul>
            <ul class="list-unstyled border border-1 d-flex flex-column gap-4 dashboard-list py-4">
                <li>
                    <p><i class="bi bi-cart-check-fill"></i><b>Sales</b></p>
                    <hr />
                </li>
                <li>
                    <span>Total</span>
                    <span>@Model.Count</span>
                </li>
                <li class="text-success">
                    <span>Completed</span>
                    <span>@Model.Where(order => order.LkpStatus == 4).Count()</span>
                </li>
                <li class="text-dark">
                    <span>Pending</span>
                    <span>@Model.Where(order => order.LkpStatus == 1).Count()</span>
                </li>
                <li class="text-info">
                    <span>Processed</span>
                    <span>@Model.Where(order => order.LkpStatus == 2).Count()</span>
                </li>
                <li class="text-danger">
                    <span>Cancelled</span>
                    <span>@Model.Where(order => order.LkpStatus == 3).Count()</span>
                </li>
                <li class="text-secondary">
                    <span>On Hold</span>
                    <span>@Model.Where(order => order.LkpStatus == 7).Count()</span>
                </li>
            </ul>
            <ul class="list-unstyled border border-1 d-flex flex-column gap-4 dashboard-list py-4">
                <li>
                    <p><i class="bi bi-chat-dots-fill"></i><b>Reviews</b></p>
                    <hr />
                </li>
                <li>
                    <span>Total Review</span>
                    <span>@totalReview</span>
                </li>
                <li>
                    <span>Average Rating</span>
                    <span>@avergeRating</span>
                </li>
                <li>
                    <span>Total Likes</span>
                    <span>@totalLikes</span>
                </li>
            </ul>
        </div>
        <div class="col-6">
            <div>
                <canvas id="myChart" width="470" height="250"></canvas>
            </div>
            <ul class="list-unstyled border border-1 d-flex flex-column gap-4 dashboard-list py-4">
                <li>
                    <p><i class="bi bi-megaphone-fill"></i><b>Latest Community Announcement</b></p>
                    <hr />
                   <div class="d-flex flex-column align-items-center text-primary">
                        <i class="bi bi-bell-fill fs-1"></i>
                        <p>No annocement</p>
                   </div>
                </li>

            </ul>
        </div>
    </div>
</div>
<script src="~/js/controller/dashboard/_Dashboard.js"></script>
